{
  "name": "wheresgandhi",
  "version": "1.0.0",
  "description": "A web and mobile app for bill tracking and referral management.",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "concurrently \"npm:start-frontend\" \"npm:start-backend\"",
    "start-frontend": "cd frontend && npm start",
    "start-backend": "cd backend && firebase emulators:start",
    "test": "npm run test-frontend && npm run test-backend",
    "test-frontend": "cd frontend && npm test",
    "test-backend": "cd backend && npm test",
    "deploy": "cd frontend && npm run build && firebase deploy",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "concurrently": "^7.0.0",
    "firebase-tools": "^11.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.0.0"
  },
  "author": "WheresGandhi Team",
  "license": "MIT"
}
